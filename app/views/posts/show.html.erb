<p id="notice"><%= notice %></p>

<h2>
  <%= @post.title %>
</h2>
<%= image_tag @post.image.url(:medium) %>
<p>
  <%= @post.content %>
</p>

<p>
  posted:
  <%= time_ago_in_words @post.date %> ago
</p>
<br/>
<h3>Comments</h3>

<% @post.comments.each do |c| %>
<p>
  <strong><%= c.name %> - <%= c.email %> said:</strong>
</p>
<p>
  <%= c.content %>
</p>
<% end %>


<%= form_for(@comment) do |f| %>
  <div class="field">
  <%= f.text_field :name, :class=>'form-inline', :placeholder => :name %>
  </div>
  <div class="field">
    <%= f.text_field :email, :class=>'form-inline', :placeholder => :email  %>
  </div>
  <div class="field">
    <%= f.text_area :content, :class=>'form-inline', :placeholder => :content  %>
  </div>
  <div class="actions">
    <%= f.submit 'Submit', :class => 'btn btn-primary' %>
  </div>

<% end %>

<%= link_to 'Edit', edit_post_path(@post), :class => 'btn btn-mini' %> |
<%= link_to 'Back', posts_path, :class => 'btn btn-mini' %>
