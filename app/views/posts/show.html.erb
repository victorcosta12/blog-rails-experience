<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Content:</b>
  <%= @post.content %>
</p>

<p>
  <b>Date:</b>
  <%= @post.date %>
</p>

<h3>Comments</h3>

<% @post.comments.each do |c| %>
<p>
  <strong><%= c.name %> - <%= c.email %> said:</strong>
</p>
<p>
  <%= c.content %>
</p>
<% end %>


<%= form_for(@comment) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
  <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
