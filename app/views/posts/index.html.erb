<h2>Listing posts</h2>
<br/  >

<table class="table">
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Date</th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td><%= post.date %></td>
    <td class="btn-group actions">
      <%= link_to 'Show', post, :class => 'btn btn-mini' %>
      <%= link_to 'Edit', edit_post_path(post), :class => 'btn btn-mini' %>
      <%= link_to 'Destroy', post, method: :delete, :class => 'btn btn-mini', data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path, :class=>'btn btn-primary' %>
